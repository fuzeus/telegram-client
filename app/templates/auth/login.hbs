{{outlet}}

<div class= "create">
  <p>Get going...</p>
</div>

<form {{action "login" on="submit"}} class="signin">
  {{input type="text"
          name="username"
          class="username"
          placeholder="Enter your username..."
          value=username}}

  {{input type="password"
          placeholder="Enter your password..."
          name="password"
          class="password"
          value=password}}


  {{#if error}}
    <div class="red-color"> {{error}} </div>
  {{/if}}

  <div class="rest">
    <div class="log">
      {{input type="submit"
              value="Log in"
              name="Log in"}}

      <span class="rec">
        <a href="/reset">Recover password</a>
      </span>

      <span class="mid"> or </span>

      <span class="sign">
        <a href="/"> Sign Up</a>
      </span>
    </div>
  </div>
</form>
