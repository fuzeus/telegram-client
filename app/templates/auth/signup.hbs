{{outlet}}
<div id = "create">
  <p>Create your account</p>
</div>

<form {{action "signup" on="submit"}} class="signin">
  {{input type="text"
          name="name"
          id="username"
          placeholder="Enter your name..."
          value=name}}
  {{input type="text"
          name="email"
          id="username"
          placeholder="Enter your email..."
          value=email}}
  {{input type="text"
          name="username"
          id="username"
          placeholder="Enter your username..."
          value=username}}

  {{input type="password"
          placeholder="Enter your password..."
          name="password"
          id="password"
          value=password}}

  {{#if error}}
    <div class="red-color"> {{error}} </div> 
  {{/if}}

  <div class="signup">
    <div class="log">
      {{input type="submit"
              value="Sign up"
              name="Sign up"}}

      <span class="login">
        <a href="/login">Login</a>
      </span>
    </div>
  </div>
</form>
